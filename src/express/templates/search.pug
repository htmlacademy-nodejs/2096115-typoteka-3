extends layout/layout

block variables
  - const wrapperClass = `wrapper-color`;
  - const headerClass = ``;
  - const logoAnchorClass = `logo`;
  - const logoImage = `logo-image-only.svg`;
  - const needLogoName = true;
  - const loggedIn = true;
  - const avatarOnlyHeader = false;

block content
  main
    section.search-page
      .search-page__wrapper
        h1 Поиск
        .search.search-page__form
          form(action='#' method='get')
            label
              input(type='text' name='query' placeholder='Что ищем?')
            button.search__button.button.button--transparent(type='submit') Найти
